{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "jsx": "preserve",
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "outDir": "./dist",
        "paths": {
        "@/*": ["src/*"],
        }
    },
    "include": [
        "src/**/*",
        "electron/**/*"
    ],
    "exclude": ["node_modules"]
}